<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Frags.Home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/gradient_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:padding="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow_narrow_left" />

        </LinearLayout>

        <ImageView
            android:layout_marginRight="-25dp"
            android:id="@+id/imageView"
            android:layout_width="170dp"
            android:layout_height="190dp"
            android:layout_marginTop="-10dp"
            android:layout_marginEnd="4dp"
            android:scaleType="centerCrop"
            android:scaleX="-1"
            android:src="@drawable/marginalia_delivery"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <!--  bookng           -->

        <TextView
            android:id="@+id/textView2"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nunito_extrabold"
            android:lineHeight="35sp"
            android:text="add parcel details."
            android:textColor="#E5A0C1 "
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/nunito_regular"
            android:lineHeight="39sp"
            android:text="baradar on time"
            android:textColor="#808089"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <LinearLayout
            android:layout_marginTop="-20dp"
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2">

           <LinearLayout
               android:layout_marginRight="20dp"
               android:layout_marginLeft="20dp"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <LinearLayout
                   android:id="@+id/addParcelContent"
                   android:orientation="vertical"
                   android:layout_width="200dp"
                   android:layout_height="wrap_content">
                   <View
                       android:layout_marginRight="20dp"
                       android:layout_height="1dp"
                       android:layout_width="match_parent"
                       android:background="#F0EFF1"
                       />
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">

                       <ImageView
                           android:id="@+id/parcelContentImage"
                           android:layout_gravity="center"
                           android:background="@drawable/bg_rounded_circle_dashed"
                           android:src="@drawable/ic_plus_black"
                           android:layout_width="35dp"
                           android:layout_height="35dp"/>

                       <LinearLayout
                           android:layout_marginLeft="10dp"
                           android:layout_marginBottom="15dp"
                           android:layout_marginTop="15dp"
                           android:orientation="vertical"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">
                           <TextView
                               android:id="@+id/parcelContentTitle"
                               android:letterSpacing=".02"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:fontFamily="@font/nunito_bold"
                               android:text="Parcel content."
                               android:textColor="@color/black"
                               android:textSize="16sp"
                               android:textStyle="bold" />

                           <TextView
                               android:id="@+id/parcelContentBody"
                               android:fontFamily="@font/nunito_regular"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="Whatâ€™s the item?"
                               android:textColor="#808089"
                               android:textSize="13sp" />
                       </LinearLayout>
                   </LinearLayout>
               </LinearLayout>

               <LinearLayout
                   android:id="@+id/addParcelQunatity"
                   android:orientation="vertical"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
                   <View
                       android:layout_height="1dp"
                       android:layout_width="match_parent"
                       android:background="#F0EFF1"
                       />
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">
                       <ImageView
                           android:id="@+id/quantityImg"
                           android:layout_gravity="center"
                           android:background="@drawable/bg_rounded_circle_dashed"
                           android:src="@drawable/ic_plus_black"
                           android:layout_width="35dp"
                           android:layout_height="35dp"/>

                       <LinearLayout
                           android:layout_marginLeft="10dp"
                           android:layout_marginBottom="15dp"
                           android:layout_marginTop="15dp"
                           android:orientation="vertical"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content">
                           <TextView
                               android:id="@+id/quantTitle"
                               android:letterSpacing=".02"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:fontFamily="@font/nunito_bold"
                               android:text="Quantity."
                               android:textColor="@color/black"
                               android:textSize="16sp"
                               android:textStyle="bold" />

                           <TextView
                               android:id="@+id/quantBody"
                               android:fontFamily="@font/nunito_regular"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="How many items?"
                               android:textColor="#808089"
                               android:textSize="13sp" />
                       </LinearLayout>
                       <ImageView
                           android:visibility="gone"
                           android:layout_marginLeft="3dp"
                           android:id="@+id/quantityImgNegative"
                           android:layout_gravity="center"
                           android:background="@drawable/bg_rounded_circle_dashed"
                           android:src="@drawable/ic_remove"
                           android:layout_width="35dp"
                           android:layout_height="35dp"/>
                   </LinearLayout>
               </LinearLayout>

           </LinearLayout>



            <View
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="#F0EFF1"
                />
            <LinearLayout
                android:id="@+id/codAmount"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/codAmountImage"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_rounded_circle_dashed"
                    android:src="@drawable/ic_plus_black"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/codAmountTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_bold"
                        android:letterSpacing=".02"
                        android:text="Do we have to collect any amount?"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/codAmountBody"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_regular"
                        android:text="Does the reciever has to pay anything? "
                        android:textColor="#808089"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="#F0EFF1"
                />
            <LinearLayout
                android:id="@+id/codAmountGive"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/payAmountIamge"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_rounded_circle_dashed"
                    android:src="@drawable/ic_plus_black"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/payAmountTitle"

                        android:letterSpacing=".02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_bold"
                        android:text="Do we have to pay any amount?"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/payAmountBody"
                        android:fontFamily="@font/nunito_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Do we have to pay anything while pickup? "
                        android:textColor="#808089"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


        <Button
            android:id="@+id/proceedBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/bg_button_rounded_enabled_list"
            android:enabled="false"
            android:padding="10dp"
            android:text="Proceed"
            android:textAllCaps="false"
            android:textSize="16dp"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>